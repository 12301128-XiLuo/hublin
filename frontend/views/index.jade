          .row
            .col-lg-12
              form
                .row
                  .col-md-6
                    .form-group
                      input#name.form-control(type='text', placeholder='Your Name *', required='', data-validation-required-message='Please enter your name.')
                      p.help-block.text-danger
                    .form-group
