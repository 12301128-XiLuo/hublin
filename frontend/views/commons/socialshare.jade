.social-share
   - function quoted(s) { return "'" + s.replace(/'/g, "\\'") + "'"; }
  ul(ng-social-buttons, data-url=quoted(__('shareUrl')), data-image="'https://hubl.in/images/hublin_256.png'")
    li.ng-social-facebook Facebook
    li.ng-social-twitter(data-title=quoted(__('twitterShareText'))) Twitter
    li.ng-social-google-plus Google+
    li.ng-social-linkedin(data-title=quoted(__('linkedinShareTitle')), data-description=quoted(__('linkedinShareDescription'))) LinkedIn
    li.ng-social-github(data-user="linagora" data-repository="hublin") GitHub
